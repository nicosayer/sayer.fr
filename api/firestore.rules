rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    function getEmail() {
  		return request.auth.token.email;
    }
  
    match /users/{user} {
      
      allow read, write: if getEmail() == user;
      
      match /profiles/{documents=**} {
      
      	allow read, write: if getEmail() == user;
      }
    }
  }
}